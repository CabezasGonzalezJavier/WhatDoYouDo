<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/crema"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.thedeveloperworldisyours.whatdoyoudoandroid.activities.IntroActivity">

    <com.thedeveloperworldisyours.whatdoyoudoandroid.view.CustomTextView
        android:id="@+id/activity_intro_text"
        style="@style/TextNormalStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/activity_intro_self_destruction" />

    <com.thedeveloperworldisyours.whatdoyoudoandroid.view.CustomTextView
        android:id="@+id/activity_intro_number"
        style="@style/NumberStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_intro_text"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />
    <com.thedeveloperworldisyours.whatdoyoudoandroid.view.CustomButton
        android:id="@+id/activity_intro_jump_button"
        style="@style/NormalButtonStyle"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/activity_intro_jump" />

</RelativeLayout>