<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="NumberStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">50sp</item>
    </style>
    <style name="TitleAppStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="TextNormalStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/blue</item>
        <item name="android:padding">3dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="NormalButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_background_selector</item><!-- only way to change this is to change the src image -->
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextViewListStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:background">@drawable/button_background_selector</item><!-- only way to change this is to change the src image -->
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SmallButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_circle_background_selector</item><!-- only way to change this is to change the src image -->
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="NormalLayoutStyle">
        <item name="android:padding">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
